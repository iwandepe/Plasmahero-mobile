<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/fragment_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDialogDonorEvidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_udd_label"
            android:textSize="@dimen/text_form_label"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_below="@id/tvDonorTitle"/>

        <EditText
            android:id="@+id/etDialogUdd"
            android:layout_width="@dimen/dialog_content_width"
            android:layout_height="@dimen/form_height"
            android:textSize="@dimen/text_form"
            android:background="@color/yellow_soft"
            android:padding="@dimen/form_padding"
            android:layout_below="@+id/tvDonorAddressLabel"/>

        <Button
            android:id="@+id/btnDialogUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="@dimen/button_padding"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="@string/text_upload"/>
    </LinearLayout>

</FrameLayout>