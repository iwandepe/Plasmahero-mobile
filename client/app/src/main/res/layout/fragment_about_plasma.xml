<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AboutPlasmaFragment"
    android:padding="@dimen/fragment_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAboutPlasmaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_about_plasma"
        android:textSize="@dimen/fragment_title_small"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvAboutPlasmaSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/about_plasma_subtitle"/>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandableDonorPlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/fragment_about_plasma_expandable_parent"
        app:expandable_secondLayout="@layout/fragment_about_plasma_expandable_second"
        app:expandable_spinner="@drawable/ic_arrow_down"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_color="@color/black"/>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandableDonorCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/fragment_about_plasma_expandable_parent"
        app:expandable_secondLayout="@layout/fragment_about_plasma_expandable_second"
        app:expandable_spinner="@drawable/ic_arrow_down"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_color="@color/black"/>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandableGetDonorPlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/fragment_about_plasma_expandable_parent"
        app:expandable_secondLayout="@layout/fragment_about_plasma_expandable_second"
        app:expandable_spinner="@drawable/ic_arrow_down"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_color="@color/black"/>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:id="@+id/expandableGetDonorPlotNoAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:expandable_duration="300"
        app:expandable_isExpanded="false"
        app:expandable_parentLayout="@layout/fragment_about_plasma_expandable_parent"
        app:expandable_secondLayout="@layout/fragment_about_plasma_expandable_second"
        app:expandable_spinner="@drawable/ic_arrow_down"
        app:expandable_spinner_animate="true"
        app:expandable_spinner_margin="14dp"
        app:expandable_spinner_gravity="end"
        app:expandable_spinner_color="@color/black"/>


</LinearLayout>