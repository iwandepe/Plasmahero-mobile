<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AboutPlasmaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAboutPlasmaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_about_plasma"
                android:textSize="@dimen/fragment_title_small"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAboutPlasmaSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/about_plasma_subtitle"/>

            <LinearLayout
                android:id="@+id/expandableDonorCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableParent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_dummy"
                    android:textSize="@dimen/text_form_label"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableSecond1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.iwan.plasmahero_mobile.utils.WrapContentListView
                    android:id="@+id/lvAboutPlasmaExpandableItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/small_margin"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandableDonorPlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableParent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_dummy"
                    android:textSize="@dimen/text_form_label"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableSecond2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.iwan.plasmahero_mobile.utils.WrapContentListView
                    android:id="@+id/lvAboutPlasmaExpandableItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/small_margin"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandableGetDonorPlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableParent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_dummy"
                    android:textSize="@dimen/text_form_label"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableSecond3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.iwan.plasmahero_mobile.utils.WrapContentListView
                    android:id="@+id/lvAboutPlasmaExpandableItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/small_margin"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandableGetDonorPlotNoAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableParent4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_dummy"
                    android:textSize="@dimen/text_form_label"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAboutPlasmaExpandableSecond4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.iwan.plasmahero_mobile.utils.WrapContentListView
                    android:id="@+id/lvAboutPlasmaExpandableItem4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/small_margin"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>